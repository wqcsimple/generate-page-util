package com.cook.api.mapper

import org.apache.ibatis.annotations.Mapper
import org.springframework.stereotype.Component
import org.apache.ibatis.annotations.Param
import org.apache.ibatis.annotations.Select
import org.apache.ibatis.annotations.SelectProvider

@Mapper
@Component
interface <%= modelName %>Mapper {

    @Select("""
        select * from <%= tableName %> where id = #{id} and weight >= 0
    """)
    fun findById(@Param("id") id: Long): <%= modelName %>VO?

    @SelectProvider(type = <%= modelName %>SqlProvider::class, method = "get<%= modelName %>List")
    fun select<%= modelName %>List(@Param("po") po: <%= modelName %>PO, @Param("limitSql") limitSql: String): List<<%= modelName %>VO>

    @SelectProvider(type = <%= modelName %>SqlProvider::class, method = "get<%= modelName %>List")
    fun count<%= modelName %>List(@Param("po") po: <%= modelName %>PO, @Param("limitSql") limitSql: String): Int
}
